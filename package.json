{
  "name": "@mrdrogdrog/optional",
  "version": "0.1.2",
  "description": "Provides a java-like optional class",
  "author": "Tilman Vatteroth <git@tilmanvatteroth.de>",
  "license": "MIT",
  "scripts": {
    "build": "tsc-esm && tsc -p tsconfig-cjs.json && find dist/cjs -type d -execdir sh -c 'cd {}; mmv -rd \"*.js*\" \"#1#2\"' \\;",
    "test": "jest",
    "prepublish": "rm -rf dist && yarn format && yarn lint && yarn build && yarn test",
    "lint": "eslint src --ext .ts",
    "format": "prettier -c \"src/**/*.{ts,tsx,js}\"",
    "format:fix": "prettier -w \"src/**/*.{ts,tsx,js}\"",
    "docs": "typedoc --plugin typedoc-plugin-markdown --out docs src/index.ts"
  },
  "type": "module",
  "main": "dist/cjs/index",
  "module": "dist/mjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index"
    }
  },
  "typesVersions": {
    "*": {
      "index.d.ts": [
        "dist/mjs/index.d.ts"
      ]
    }
  },
  "files": [
    "LICENSES/*",
    "package.json",
    "README.md",
    "dist/**"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mrdrogdrog/optional.git"
  },
  "devDependencies": {
    "@digitak/tsc-esm": "3.1.3",
    "@jest/types": "28.1.3",
    "@typescript-eslint/eslint-plugin": "5.30.6",
    "@typescript-eslint/parser": "5.30.6",
    "eslint": "8.19.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "26.6.0",
    "jest": "28.1.3",
    "prettier": "2.7.1",
    "ts-jest": "28.0.7",
    "typescript": "4.7.4"
  },
  "prettier": {
    "parser": "typescript",
    "singleQuote": true,
    "jsxSingleQuote": true,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "always"
  },
  "packageManager": "yarn@3.2.1"
}

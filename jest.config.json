{
  "preset": "ts-jest",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testEnvironment": "node",
  "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
  "testPathIgnorePatterns": [
    "/dist/"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js"
  ],
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig-cjs.json"
    }
  }
}
